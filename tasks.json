    {
      "label": "Start Dapr for Product Service",
      "type": "shell",
      "command": "dapr",
      "args": [
        "run",
        "--app-id",
        "product-service",
        "--app-port",
        "1001",
        "--dapr-http-port",
        "3501",
        "--dapr-grpc-port",
        "50001",
        "--resources-path",
        "${workspaceFolder}/product-service/.dapr/components",
        "--config",
        "${workspaceFolder}/product-service/.dapr/config.yaml",
        "--log-level",
        "warn"
      ],
      "options": {
        "cwd": "${workspaceFolder}/product-service"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^Starting Dapr",
            "endsPattern": "You're up and running"
          }
        }
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "dedicated",
        "showReuseMessage": false
      }
    },
    {
      "label": "Stop Dapr for Product Service",
      "type": "shell",
